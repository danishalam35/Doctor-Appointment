<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardiology"
                android:textStyle="bold"
                android:fontFamily="@font/adamina"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Delhi"
                android:fontFamily="@font/adamina"
                android:layout_marginLeft="100dp"/>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_search"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_baseline_search_24" />


            <EditText
                android:id="@+id/inputMobile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:layout_marginLeft="3dp"
                android:hint="Search Doctors,Specialist"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:fontFamily="@font/adamina"
                android:textSize="14sp" />



        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/bkjbkj"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Availability"
                android:textSize="10dp"
                android:fontFamily="@font/adamina"
                android:layout_marginTop="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today 10 AM"
                android:fontFamily="@font/adamina"
                android:textSize="10dp"
                android:layout_marginTop="85dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="65dp">
                <Button
                    android:id="@+id/call"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textColor="#009C25"
                    android:text="Call"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_call"/>

                <Button
                    android:id="@+id/book"
                    android:layout_width="150dp"
                    android:background="@drawable/bg_login"
                    android:layout_marginLeft="20dp"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:text="Book Appointment"
                    android:layout_height="35dp"/>
            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr Adams Archer"
                    android:textColor="#010101"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14 yrs Experience"
                    android:fontFamily="@font/adamina"
                    android:layout_marginTop="2dp"
                    android:textSize="10dp"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹500 Consulting Fees"
                    android:fontFamily="@font/adamina"
                    android:layout_marginTop="2dp"
                    android:textSize="10dp"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="-50dp"
                    android:layout_marginLeft="230dp"
                    android:src="@drawable/khjkbhvh"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="12dp"

                    android:fontFamily="@font/adamina"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="210dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36 Reviews"
                    android:textSize="10dp"
                    android:fontFamily="@font/adamina"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="210dp"/>
            </LinearLayout>





        </RelativeLayout>





    </LinearLayout>

</RelativeLayout>