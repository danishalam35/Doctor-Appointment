<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllActivity.NamesActivity"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi,"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:layout_marginLeft="30dp"
        android:textColor="#D7D7D7"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text="What's your name?"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Enter Name"
            android:layout_marginLeft="30dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_marginTop="15dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="430dp">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                app:buttonTint="@color/colorPrimary"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:textColor="#fff"
                android:textSize="12dp"
                android:layout_marginLeft="0dp"
                android:text="Receive relevant offers and promotional"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:textColor="#fff"
            android:textSize="12dp"
            android:text="communication from Aika"
            android:layout_marginLeft="62dp"
            />

        <Button
            android:id="@+id/BtnNames"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_8"
            android:layout_marginLeft="30dp"
            android:text="Continue"
            android:textColor="#212594"
            android:textAllCaps="false"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</RelativeLayout>